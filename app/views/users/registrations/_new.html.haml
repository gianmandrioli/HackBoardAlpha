= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
  = devise_error_messages!
  .form-group
    = f.label 'Nombre y Apellido'
    = f.text_field :name, autofocus: true, placeholder: "Jon Snow" , required: "" , class: 'form-control'
  .form-group
    = f.label 'Título'
    %div
    -# = f.select :title, User.titles.keys.map { |w| [w, w] }, selected: 'Estudiante', class: 'selectpicker'
    = f.select(:title, User.titles.keys.map { |w| [w, w] }, {}, { :class => 'my_style_class' })
  .form-group
    = f.label 'Correo electronico'
    = f.email_field :email, autofocus: true, placeholder: "jonsnow@ejemplo.com", autocomplete: "email" , class: 'form-control', required: ""
  .form-group
    = f.label 'Teléfono'
    = f.number_field :mobile, placeholder: "0000-000-0000" ,type:"tel", class: 'form-control', required: ""
  .form-group
    = f.label 'Contraseña'
    - if @minimum_password_length
      %em
        (Mínimo #{@minimum_password_length} caracteres)
    = f.password_field :password, placeholder: "Contraseña" , autocomplete: "off", class: 'form-control'
  .form-group
    = f.label 'Confirmar contraseña'
    = f.password_field :password_confirmation, placeholder: "Contraseña" , autocomplete: "off", class: 'form-control'
  .actions
    = f.submit "Registrarme", class: 'btn btn-primary btn-block'





